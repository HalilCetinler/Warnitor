			<div class="register-content">
				<form action="index.html" method="POST" name="register_form">
					<h1 class="text-center">Sign Up</h1>
					
					<div class="mb-3">
						<label class="form-label">Email Address <span class="text-danger">*</span></label>
						<input type="text" class="form-control form-control-lg" placeholder="Enter mail" value="">
					</div>
					<div class="mb-3">
						<label class="form-label">Password <span class="text-danger">*</span></label>
						<input type="password" class="form-control form-control-lg" value="">
					</div>
					<div class="mb-3">
						<label class="form-label">Confirm Password <span class="text-danger">*</span></label>
						<input type="password" class="form-control form-control-lg" value="">
						
					</div>
					
					<div class="mb-3">
						<button type="submit" class="btn btn-theme btn-lg fw-semibold d-block w-100">Sign Up</button>
					</div>
					<style>
						button:disabled {
							background-color: red;
						}
					</style>
				</form>
			</div>
			<!-- END register-content -->
		
